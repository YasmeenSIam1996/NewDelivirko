<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <LinearLayout
        android:id="@+id/layoutForgetDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/dialog_bg"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvTitleReturnDone"
            style="@style/TitleDialogStyle"
            android:layout_marginTop="50dp"
            android:text="تم ارجاع الطلب 123123 بنجاح" />

        <Button
            android:id="@+id/btnDoneReturn"
            style="@style/btnDialogStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/true_or_false_btn"
            android:text="@string/done" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_done" />


</RelativeLayout>