<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragRestStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.restaurant.HelpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/delivery_bg2" />

        <ImageView
            style="@style/MainLogo"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabsHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tabs_bg"
        app:tabGravity="fill"
        app:tabIndicatorHeight="4dp"

        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/colorPrimaryDark">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:background="@drawable/tabs_bg"
            android:text="بيانات الاتصال" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/tabs_bg"
            android:text="أسئلة شائعة" />

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/containerHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>